

<%# FROM FRONT END %>
<div class="back">
  <div class=contentBody>
    <aside class="sidebar">
        <h1> My Collection </h1>
        <%= link_to "edit collection", edit_collection_path %>
        <%if current_user %>
          <p> Welcome <%= current_user.email %></p>
            <%= image_tag "IMG_5530.jpg", class:"shelf" %>
        

        <div class="options">
          <select id="scopes" name="scope" onchange="window.location.href=this.options[this.selectedIndex].value">
            <option value="<%= albums_path %>" selected>Sort by ... </option>
            <option value="<%= albums_path %>?sort=recently_added" name="date">Sort by date added</option>
            <option value="<%= albums_path %>" name="genre">Sort by genre</option>
            <option value="<%= albums_path %>" name="artist">Sort by artist name</option>
          </select>
        </div>
      
        <% else %>
          <p> Please log-in to see this page!</p>
        <% end %>
         

    </aside>

    <main class="mainContent">
      <br>
        <%if current_user.albums.any?%>
          <% current_user.albums.each do |album| %>
              <ul>
                <div class="flex_container">
                  <li class="flex-item">
                  <a href="<%=album.link%>" target="_blank"><img class="flex-item" class="cover" src="<%=album.cover_image%>" alt=""></a></li>
                  <h4><%= album.artist %></h4>
                  <p><%= album.name %></p>
                </div>
              </ul>
          <% end %>
        <% elsif %>
          <% if @searched_albums.any? %> 
            <ul> 
              <% @searched_albums.each do |album| %> 
              <a href="<%=album.link%>" target="_blank"><img class="flex-item" class="cover" src="<%=album.cover_image%>" alt=""></a></li> 
              <h4><%= album.artist %></h4> 
              <p><%= album.name %></p> 
            </ul> 
              <% end%> 
            <% end %> 
        <% else %>
          <p>There are no albums yet.</p>
        <% end %>
      </div>
    </main>
  </div>
</div>
