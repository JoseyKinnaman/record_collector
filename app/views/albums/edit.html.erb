<div class="back">
  <div class=contentBody>
    <aside class="sidebar">
      <%= image_tag "logo.png", class: "cover"%>
        <h1> My Collection </h1>
          <%= image_tag "IMG_5530.jpg", class: "shelf" %>
          <br>
          <a href="<%= albums_path %>">Back to albums</a>
    </aside>

    <main class="mainContent">
    <br>
    <%if current_user.albums.any?%>
      <% current_user.albums.each do |album| %>
        <ul>
          <div class="flex_container">
            <li class="flex-item">
            <a href="<%=album.link%>" target="_blank"><img class="flex-item" class="cover" src="<%=album.cover_image%>" alt=""></a></li>
            <h4><%= album.artist %></h4>
            <p><%= album.name %></p>
            <%= button_to "Delete album", album_path(album.id), method: :delete  %>
          </div>
        </ul>
      <% end %>
    <% else %>
      <p>You don't currently have any albums!</p>
    <% end %>
  </main>
